<?xml version="1.0" encoding="utf-8"?>
<com.ihs.inputmethod.uimodules.ui.adjustheight.AdjustHeightView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6201f20"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_reset"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:background="@drawable/shape_adjust_height_reset_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_reset"
            android:tint="@color/black_standard" />

        <ImageView
            android:id="@+id/btn_confirm"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:layout_marginLeft="66dp"
            android:background="@drawable/shape_adjust_height_confirm_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_tick" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/adjust_height_controller_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <ImageView
            android:id="@+id/image_controller"
            android:layout_width="@dimen/keyboard_adjust_height_controller_height"
            android:layout_height="@dimen/keyboard_adjust_height_controller_height"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_adjust_keyboard_height_adjuster" />

    </RelativeLayout>

</com.ihs.inputmethod.uimodules.ui.adjustheight.AdjustHeightView>