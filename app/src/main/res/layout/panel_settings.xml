<?xml version="1.0" encoding="utf-8"?>
<com.ihs.inputmethod.uimodules.settings.SettingPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ihs.inputmethod.uimodules.settings.SettingsViewPager
        android:id="@+id/settingsViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:layout_marginTopPercent="5%" />

    <com.ihs.inputmethod.uimodules.widget.ViewPagerIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:ci_drawable_checked="@drawable/setting_pannel_indicator_shape_pressed"
        app:ci_drawable_normal="@drawable/setting_pannel_indicator_shape_normal"
        app:ci_height="5dp"
        app:ci_margin="4dp"
        app:ci_width="5dp" />

</com.ihs.inputmethod.uimodules.settings.SettingPanelView>