<?xml version="1.0" encoding="utf-8"?>
<com.ihs.inputmethod.uimodules.settings.SettingItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_settings_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/setting_panel_item_margin_top"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/tv_settings_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_settings_item"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/setting_panel_item_text_margin_top"
            android:gravity="center"
            android:textSize="9sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/new_tip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1dp"
        android:text="NEW"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_marginLeftPercent="30%" />
</com.ihs.inputmethod.uimodules.settings.SettingItemView>